type Chat {
  id: ID!
  title: String
  uuid: String
  messages: [Message]
}

type Message {
  id: ID!
  uuid: String
  message: String
  createdAt: String
  chat: Chat
  user: User
}

type User {
  id: ID!
  firstName: String
  lastName: String
}

type Query {
  getAllChats: [Chat]
  getMessagesByChatId(id: ID!): [Message]
}

type Subscription {
    getMessagesForChat: [Message]
}